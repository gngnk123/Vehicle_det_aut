@model IEnumerable<VehicleDet.Models.Vehiclemodel>

@{
    ViewBag.Title = "ViewVehicles";
}

<h2>ViewVehicles</h2>
  
<p>
    @Html.ActionLink("Create New", "CarAdd", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Deleted Vehicles", "DeletedView", null, new { @class = "btn btn-danger", @id = "DeletedViewBtn" })
</p>
<div class="alert alert-primary" role="alert">

    <p>Total Vehicles : @Model.Count() </p>

</div>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Odo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Engine)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.CarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C_Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Odo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Engine)
            </td>
            <td>
                @Html.ActionLink("Edit", "CarUpdate", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "CarDelete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
